npm install express
const express = require('express');
const app = express();

app.get('/hello', (req, res) => {
  res.send('OlÃ¡, mundo!');
});

app.post('/post', (req, res) => {
  res.send(req.body);
});

const port = 8080;
app.listen(port, () => {
  console.log(`Servidor rodando na porta ${port}`);
});
